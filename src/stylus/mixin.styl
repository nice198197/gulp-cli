border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url)
  background-repeat: no-repeat

opacity-ie($opacity)
  opacity $opacity
  // IE8 filter
  $opacity-ie = ($opacity * 100)
  filter s('alpha(opacity=%s)', $opacity-ie)